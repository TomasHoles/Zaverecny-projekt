# ============================================
# Plutoa - Environment Variables
# ============================================
# Zkopírujte tento soubor jako .env a vyplňte hodnoty
# NIKDY necommitujte .env soubor do Git repozitáře!

# ============================================
# DJANGO BACKEND
# ============================================

# Secret key pro Django (vygenerujte nový pro produkci!)
# Můžete vygenerovat pomocí: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-key-here

# Debug mode (True pouze pro development!)
DJANGO_DEBUG=True

# Povolené hostitelé (oddělené čárkou)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# DATABÁZE
# ============================================

# Pro development se používá SQLite (výchozí)
# Pro produkci doporučujeme PostgreSQL:
# DATABASE_URL=postgres://user:password@localhost:5432/plutoa_db

# ============================================
# EMAIL (pro reset hesla)
# ============================================

# SMTP server
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# ============================================
# FRONTEND
# ============================================

# URL API backendu
REACT_APP_API_URL=http://localhost:8000/api

# ============================================
# CORS (Cross-Origin Resource Sharing)
# ============================================

# Frontend URL pro CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
